<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/colorBackground"
     android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
         android:layout_height="?attr/actionBarSize"
         android:layout_width="match_parent"
         android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
         android:background="@color/aqua_blue"
         android:title="@string/app_name"
         android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
         android:id="@+id/toolbar" />

    <ScrollView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:fillViewport="true">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:paddingEnd="24dp"
                 android:gravity="center"
                 android:background="@drawable/bg_atlantis_gradient"
                 android:orientation="vertical"
                 android:paddingBottom="12dp"
                 android:fitsSystemWindows="true"
                 android:paddingStart="32dp"
                 android:paddingTop="16dp">

                <FrameLayout
                     android:layout_height="200dp"
                     android:layout_width="200dp">

                    <com.atlantis.aquabattery.BatteryRingView
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:id="@+id/batteryRing" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="52sp"
                         android:textColor="#FFFFFF"
                         android:letterSpacing="0.02"
                         android:id="@+id/tvPercent"
                         android:layout_gravity="center"
                         android:text="100%"
                         android:textStyle="bold" />

                    <ImageView
                         android:layout_height="32dp"
                         android:layout_width="32dp"
                         android:layout_marginBottom="28dp"
                         android:visibility="gone"
                         android:src="@drawable/ic_bolt"
                         android:id="@+id/ivCharging"
                         android:layout_gravity="center|bottom" />

                </FrameLayout>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="16sp"
                     android:textColor="#E3F2FD"
                     android:id="@+id/tvStatus"
                     android:text="Charging"
                     android:paddingTop="6dp" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="16sp"
                     android:textColor="#BBDEFB"
                     android:id="@+id/tvSource"
                     android:text="AC"
                     android:paddingTop="2dp" />

            </LinearLayout>

            <View
                 android:layout_height="8dp"
                 android:layout_width="match_parent"
                 android:background="@color/colorBackground" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="12dp"
                 android:layout_marginEnd="16dp"
                 android:background="@drawable/bg_card"
                 android:elevation="2dp"
                 android:padding="20dp"
                 android:orientation="vertical"
                 android:layout_marginTop="12dp"
                 android:layout_marginStart="16dp">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="16sp"
                     android:id="@+id/tvHealth"
                     android:text="Health · Good" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="16sp"
                     android:id="@+id/tvTemp"
                     android:text="Temp · 31.6 °C"
                     android:paddingTop="6dp" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="16sp"
                     android:id="@+id/tvVoltage"
                     android:text="Voltage · 4321 mV"
                     android:paddingTop="6dp" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="14sp"
                     android:id="@+id/tvLevelScale"
                     android:text="Level · 100 / 100"
                     android:paddingTop="10dp" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="14sp"
                     android:textColor="#607D8B"
                     android:id="@+id/tvDrain"
                     android:text="Drain · Charging"
                     android:paddingTop="12dp" />

                <TextView
                     android:id="@+id/tvLastUpdated"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Updated just now"
                     android:textSize="12sp"
                     android:textColor="#90A4AE"
                     android:paddingTop="4dp" />

            </LinearLayout>

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginBottom="6dp"
                 android:textSize="14sp"
                 android:textColor="#90A4AE"
                 android:layout_marginStart="20dp"
                 android:text="Battery usage" />

            <com.atlantis.aquabattery.BatteryGraphView
                 android:layout_height="220dp"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="24dp"
                 android:layout_marginEnd="16dp"
                 android:background="@drawable/bg_graph_card"
                 android:elevation="2dp"
                 android:clipToOutline="true"
                 android:layout_marginStart="16dp"
                 android:id="@+id/batteryGraph" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>