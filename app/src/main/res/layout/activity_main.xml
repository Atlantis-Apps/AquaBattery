<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/aqua_blue"
        android:title="@string/app_name"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_atlantis_gradient"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:fitsSystemWindows="true">

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <com.atlantis.aquabattery.BatteryRingView
                        android:id="@+id/batteryRing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="100%"
                        android:textSize="52sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.02" />

                    <ImageView
                        android:id="@+id/ivCharging"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="28dp"
                        android:src="@drawable/ic_bolt"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charging"
                    android:textSize="16sp"
                    android:textColor="#E3F2FD"
                    android:paddingTop="6dp" />

                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:textSize="16sp"
                    android:textColor="#BBDEFB"
                    android:paddingTop="2dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorBackground" />

            <!-- INFO CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health · Good"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp · 31.6 °C"
                    android:textSize="16sp"
                    android:paddingTop="6dp" />

                <TextView
                    android:id="@+id/tvVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voltage · 4321 mV"
                    android:textSize="16sp"
                    android:paddingTop="6dp" />

                <TextView
                    android:id="@+id/tvLevelScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level · 100 / 100"
                    android:textSize="14sp"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/tvDrain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drain · Stable"
                    android:textSize="14sp"
                    android:textColor="#607D8B"
                    android:paddingTop="12dp" />

                <TextView
                    android:id="@+id/tvLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated just now"
                    android:textSize="12sp"
                    android:textColor="#90A4AE"
                    android:paddingTop="4dp" />

            </LinearLayout>

            <!-- GRAPH LABEL -->
            <TextView
                android:id="@+id/tvGraphLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp"
                android:text="Session history"
                android:textSize="13sp"
                android:textColor="#90A4AE"
                android:textStyle="bold" />

            <!-- SMOOTH TOGGLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smooth graph"
                    android:textSize="13sp"
                    android:textColor="#90A4AE" />

                <Switch
                    android:id="@+id/switchSmoothGraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- GRAPH -->
            <com.atlantis.aquabattery.BatteryGraphView
                android:id="@+id/batteryGraph"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_graph_card"
                android:elevation="2dp"
                android:clipToOutline="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>