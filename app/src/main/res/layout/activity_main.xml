<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="28dp"
    android:background="@drawable/bg_atlantis_gradient">

    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="220dp">

        <com.atlantis.aquabattery.BatteryRingView
            android:id="@+id/batteryRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="22%"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageView
    android:id="@+id/ivCharging"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_gravity="center|bottom"
    android:layout_marginBottom="36dp"
    android:src="@drawable/ic_bolt"
    android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discharging"
        android:textSize="18sp"
        android:textColor="#E3F2FD"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tvSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not plugged"
        android:textSize="16sp"
        android:textColor="#BBDEFB" />

</LinearLayout>

        <!-- DETAILS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/tvHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health: Good"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tvVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltage"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tvLevelScale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textSize="14sp"
                android:paddingTop="12dp" />

            <TextView
                android:id="@+id/tvPlugged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plugged code"
                android:textSize="14sp"
                android:paddingTop="4dp" />

        </LinearLayout>

        <!-- BATTERY HISTORY GRAPH -->
<com.atlantis.aquabattery.BatteryGraphView
    android:id="@+id/batteryGraph"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="16dp"
    android:background="#FFFFFF" />

    </LinearLayout>
</ScrollView>