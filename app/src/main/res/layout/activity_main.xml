<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- ===== TOOLBAR (REQUIRED FOR ⋮ MENU) ===== -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/aqua_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:title="@string/app_name" />

    <!-- ===== SCROLLABLE CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== HEADER ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:fitsSystemWindows="true"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:paddingStart="32dp"
                android:paddingEnd="24dp"
                android:background="@drawable/bg_atlantis_gradient">

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <com.atlantis.aquabattery.BatteryRingView
                        android:id="@+id/batteryRing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="100%"
                        android:textSize="52sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/ivCharging"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="28dp"
                        android:src="@drawable/ic_bolt"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charging"
                    android:textSize="16sp"
                    android:textColor="#E3F2FD"
                    android:paddingTop="6dp" />

                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:textSize="16sp"
                    android:textColor="#BBDEFB"
                    android:paddingTop="2dp" />
            </LinearLayout>

            <!-- ===== DIVIDER ===== -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorBackground" />

            <!-- ===== DETAILS CARD ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health · Good"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp · 31.6 °C"
                    android:textSize="16sp"
                    android:paddingTop="6dp" />

                <TextView
                    android:id="@+id/tvVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voltage · 4321 mV"
                    android:textSize="16sp"
                    android:paddingTop="6dp" />

                <TextView
                    android:id="@+id/tvLevelScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level · 100 / 100"
                    android:textSize="14sp"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/tvDrain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drain · Charging"
                    android:textSize="14sp"
                    android:textColor="#607D8B"
                    android:paddingTop="12dp" />
            </LinearLayout>

            <!-- ===== GRAPH ===== -->
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery usage"
                android:textSize="14sp"
                android:textColor="#90A4AE"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp" />
           
            <com.atlantis.aquabattery.BatteryGraphView
                android:id="@+id/batteryGraph"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_graph_card"
                android:elevation="2dp"
                android:clipToOutline="true" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>