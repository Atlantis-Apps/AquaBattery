<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FAFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== HEADER ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:fitsSystemWindows="true"
        android:paddingTop="24dp"
        android:paddingBottom="20dp"
        android:paddingStart="32dp"
        android:paddingEnd="24dp"
        android:background="@drawable/bg_atlantis_gradient">

            <FrameLayout
                android:layout_width="216dp"
                android:layout_height="216dp">

                <com.atlantis.aquabattery.BatteryRingView
                    android:id="@+id/batteryRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="100%"
                    android:textSize="52sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/ivCharging"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/ic_bolt"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charging"
                android:textSize="16sp"
                android:textColor="#E3F2FD"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textSize="16sp"
                android:textColor="#BBDEFB" />
        </LinearLayout>

        <!-- ===== DIVIDER ===== -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F0F4F8" />

        <!-- ===== DETAILS CARD ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health · Good"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp · 31.6 °C"
                android:textSize="16sp"
                android:paddingTop="6dp" />

            <TextView
                android:id="@+id/tvVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltage · 4321 mV"
                android:textSize="16sp"
                android:paddingTop="6dp" />

            <TextView
                android:id="@+id/tvLevelScale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level · 100 / 100"
                android:textSize="14sp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/tvDrain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drain · Charging"
                android:textSize="14sp"
                android:textColor="#607D8B"
                android:paddingTop="12dp" />
        </LinearLayout>

        <!-- ===== GRAPH ===== -->
        <com.atlantis.aquabattery.BatteryGraphView
                android:id="@+id/batteryGraph"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_graph_card"
                android:elevation="2dp"
                android:clipToOutline="true" />

    </LinearLayout>
</ScrollView>